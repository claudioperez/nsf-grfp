  % \includegraphics[scale=0.9]{\eqndir/\jobname-eqn-\arabic{ie@subjob}.png}%
  \raisebox{-0.23\height}{\includegraphics[scale=0.9]{\eqndir/\jobname-eqn-\arabic{ie@subjob}.png}}%
}
